    </servlet>
    <servlet>
        <servlet-name>filtroServlet</servlet-name>
        <servlet-class>control.filtroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sinFiltroServlet</servlet-name>
        <servlet-class>control.sinFiltroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pisoDetalladoServlet</servlet-name>
        <servlet-class>control.pisoDetalladoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alquilarPisoServlet</servlet-name>
        <servlet-class>control.alquilarPisoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>regServlet</servlet-name>
        <url-pattern>/regServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarPerfilServlet</servlet-name>
        <url-pattern>/modificarPerfilServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insertarPisoServlet</servlet-name>
        <url-pattern>/insertarPisoServlet</url-pattern>
