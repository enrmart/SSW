    <servlet>
        <servlet-name>regServlet</servlet-name>
        <servlet-class>control.regServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>control.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarPerfilServlet</servlet-name>
        <servlet-class>control.modificarPerfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insertarPisoServlet</servlet-name>
        <servlet-class>control.insertarPisoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarCuentaServlet</servlet-name>
