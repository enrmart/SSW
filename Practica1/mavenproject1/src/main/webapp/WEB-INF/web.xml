        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filtroServlet</servlet-name>
        <url-pattern>/filtroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sinFiltroServlet</servlet-name>
        <url-pattern>/sinFiltroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pisoDetalladoServlet</servlet-name>
        <url-pattern>/pisoDetalladoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alquilarPisoServlet</servlet-name>
        <url-pattern>/alquilarPisoServlet</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
